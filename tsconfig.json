{
	"compilerOptions": {
		"strict": true,
		"baseUrl": ".",
		"inlineSourceMap": true,
		"inlineSources": true,
		"module": "esnext",
		"target": "esnext",
		"allowJs": true,
		"noImplicitAny": true,
		"moduleResolution": "node",
		"importHelpers": true,
		"isolatedModules": true,
		"strictNullChecks": true,
		"lib": ["DOM", "ESNext"],
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true
	},
	"include": ["**/*.ts"]
}
